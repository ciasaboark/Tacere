<RelativeLayout
    android:id="@+id/widget_quicksilence_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:layout_margin="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/header_background"
        android:elevation="0dp"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Upgrade to unlock widgets"
            android:id="@+id/widget_quicksilence_text"
            android:clickable="false"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_color_alt"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade"
            android:id="@+id/widget_quicksilence_upgrade_button"
            android:layout_gravity="center_horizontal"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/text_button_positive"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/action_button_quicksilence"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/widget_quicksilence_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:src="@drawable/shopping_cart"
            android:tint="@android:color/white"/>
    </RelativeLayout>

</RelativeLayout>