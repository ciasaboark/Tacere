<RelativeLayout
android:id="@+id/widget_quicksilence_root"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="80dp"
android:orientation="vertical"
android:layout_margin="6dp">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="40dp"
    android:background="@color/header_background"
    android:elevation="0dp"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quicksilence Active"
        android:id="@+id/widget_quicksilence_text"
        android:clickable="false"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="60dp"
        android:textColor="@color/text_color_alt"/>
</LinearLayout>

<FrameLayout
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:foreground="?android:selectableItemBackground"
    android:background="@drawable/action_button_cancel_quicksilence"
    android:id="@+id/widget_quicksilence_fab">

    <ImageView
        android:id="@+id/widget_quicksilence_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:src="@drawable/fab_normal"
        android:tint="@android:color/white"
        android:layout_gravity="center"/>
</FrameLayout>

</RelativeLayout>