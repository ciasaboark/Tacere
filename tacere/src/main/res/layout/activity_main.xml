<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideOverlay"
    tools:context=".MainActivity" >

    <ListView
        android:id="@+id/eventListView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:scrollbarStyle="outsideOverlay"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="96dp"
        android:id="@+id/error_box"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/calendar_icon"
            android:background="@drawable/calendar_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:tint="@color/primary"/>

        <TextView
            android:id="@+id/event_list_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <ViewFlipper
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quicksilenceFlipper"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/quickSilenceButton"
            android:src="@drawable/ic_state_silent"
            android:elevation="2dp"
            android:background="@drawable/action_button_quicksilence"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/placeholder"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/cancel_quickSilenceButton"
            android:src="@drawable/ic_state_normal"
            android:elevation="2dp"
            android:background="@drawable/action_button_cancel_quicksilence"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/placeholder"
            android:visibility="gone"/>
    </ViewFlipper>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:id="@+id/quicksilenceButton_compat"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />




</RelativeLayout>