<LinearLayout
    android:id="@+id/linearlayout5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/settings_serviceBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="16dp"
        android:theme="@style/Header_Switch"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/activateServiceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_service_enabled"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/header_text_color"/>
        </LinearLayout>

        <Switch
            android:id="@+id/activateServiceSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:clickable="false"/>

    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideOverlay" >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/eventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/section_background"
                android:padding="16dp"
                android:text="@string/pref_general_header"
                android:textColor="@color/section_text_color"/>

            <RelativeLayout
                android:id="@+id/settings_ringerBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onClickRingerType"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/settings_ringerIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ic_state_silent"
                    android:clickable="false"
                    android:paddingLeft="16dp"/>

                <TextView
                    android:id="@+id/settings_ringerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:clickable="false"
                    android:text="@string/pref_ringer_type_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:id="@+id/ringerTypeDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/settings_ringerTitle"
                    android:layout_marginLeft="50dp"
                    android:clickable="false"
                    android:text="@string/placeholder"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/do_not_disturb_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:nestedScrollingEnabled="false"
                android:onClick="onClickDoNotDisturb"
                android:padding="16dp">

                <Switch
                    android:id="@+id/doNotDisturbSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/do_not_disturb_header"
                    android:layout_centerVertical="true"
                    android:checked="false"
                    android:clickable="false"/>

                <TextView
                    android:id="@+id/do_not_disturb_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_do_not_disturb"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/section_background"
                android:padding="16dp"
                android:text="@string/pref_volumes_header"
                android:textColor="@color/section_text_color"/>

            <RelativeLayout
                android:id="@+id/settings_mediaBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onClickAdjustMedia"
                android:padding="16dp">

                <Switch
                    android:id="@+id/adjustMediaCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                     />

                <TextView
                    android:id="@+id/settings_mediaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_media_volume"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <SeekBar
                android:id="@+id/mediaSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <RelativeLayout
                android:id="@+id/settings_alarmBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onClickAdjustAlarm"
                android:padding="16dp">

                <Switch
                    android:id="@+id/adjustAlarmCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                     />

                <TextView
                    android:id="@+id/settings_alarmText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/pref_alarm_volume"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </RelativeLayout>

            <SeekBar
                android:id="@+id/alarmSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/section_background"
                android:padding="16dp"
                android:text="@string/pref_quick_silence_header"
                android:textColor="@color/section_text_color"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onClickQuickSilence"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_quick_silence"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/quickSilenceDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="@string/pref_advance_header"
                android:textColor="@color/textColorHeading"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="onClickAdvancedSettings"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_advanced_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_advanced_sub"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

        </LinearLayout>

</ScrollView>
</LinearLayout>