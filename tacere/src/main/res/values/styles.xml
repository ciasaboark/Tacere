<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:actionMenuTextColor">@color/textColorMenu</item>
        <item name="android:actionMenuTextAppearance">@color/menu_text</item>
    </style>

    <style name="Dialog" parent="android:Theme.Holo.Light.Dialog" />

    <style name="Header" parent="AppTheme">
        <item name="android:colorBackground">@color/windowBackground</item>
    </style>

    <style name="Header_Switch" parent="AppTheme">
        <item name="android:colorBackground">@color/header_background</item>
        <item name="android:background">@color/header_background</item>
        <item name="android:textColor">@color/header_text_color</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


</resources>
