<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:clickable="true"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground" >

    <RelativeLayout
        android:id="@+id/calendarColor"
        android:layout_width="7dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:minWidth="10dp"
        android:padding="10dp" >

    </RelativeLayout>

    <ImageView
        android:id="@+id/ringerState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:contentDescription="@string/icon_alt_text_normal"
        android:minHeight="24dp"
        android:minWidth="24dp"
        android:src="@android:drawable/btn_radio" />

    <TextView
        android:id="@+id/eventText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="false"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_toLeftOf="@id/ringerState"
        android:layout_toRightOf="@id/calendarColor"
        android:maxLines="1"
        android:paddingLeft="6dp"
        android:scrollbarStyle="outsideOverlay"
        android:text="@string/placeholder"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/eventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventText"
        android:layout_toLeftOf="@id/ringerState"
        android:layout_toRightOf="@id/calendarColor"
        android:paddingLeft="6dp"
        android:text="@string/placeholder"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
